{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
	Stages
{% endblock %}

{% block nav_class %}
	transparent navbar-dark navbar-bg-dark
{% endblock %}

{% block body %}
	
	<style>
        figure a img {
            height: 500px !important;
            object-fit: contain;
        }
	</style>
	
	<section class="wrapper image-wrapper bg-image bg-overlay bg-overlay-400 text-white bg-dark">
		<div class="container pt-17 pb-20 pt-md-19 pb-md-21 text-center">
			<div class="row">
				<div class="col-lg-8 mx-auto">
					<h1 class="display-1 mb-3 text-white">Arts martiaux - Stages</h1>
				</div>
			</div>
		</div>
	</section>
	
	<section class="wrapper bg-light">
		<div class="container pb-14 pb-md-16">
			<div class="row">
				<div class="col-lg-6 mx-auto">
					<div class="blog classic-view mt-n17">
						{% for event in events %}
							<article class="post">
								<div class="card">
									<figure class="card-img-top overlay overlay-1 hover-scale">
										<a class="link-dark" href="/evenements/{{ event.slug }}">
											<img src="/uploads/{{ event.image }}" alt="{{ event.image }}" />
										</a>
										<figcaption>
											<h5 class="from-top mb-0"></h5>
										</figcaption>
									</figure>
									<div class="card-body">
										<div class="post-header">
											<div class="post-category text-line">
												<a href="#" class="hover" rel="category">{{ event.category }}</a>
											</div>
											<h2 class="post-title mt-1 mb-0">
												<a class="link-dark" href="/evenements/{{ event.slug }}">
													{{ event.title }}
												</a>
											</h2>
										</div>
										<div class="post-content">
											{{ event.content|raw }}
										</div>
									</div>
								</div>
							</article>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
